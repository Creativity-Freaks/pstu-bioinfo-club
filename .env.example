# Vite + Supabase environment variables
# Copy this file to `.env` and fill in values.

# Supabase project URL and anon key
VITE_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
VITE_SUPABASE_ANON_KEY="YOUR_ANON_KEY"

# Admin access control (choose one)
# Exact allowed admin email
VITE_ADMIN_EMAIL="club-admin@yourdomain.com"
# OR allow any email under this domain
# e.g., if set to "yourdomain.com", users like someone@yourdomain.com are allowed
VITE_ADMIN_EMAIL_DOMAIN="yourdomain.com"

# Server-side email notifications
## Option A: Gmail SMTP with App Password (recommended for Gmail)
# Requires 2FA enabled on the Gmail account and an App Password generated.
GMAIL_USER="yourgmail@gmail.com"
GMAIL_APP_PASSWORD="your-16-char-app-password"
# Optional From address; defaults to GMAIL_USER if not set
MAIL_FROM="yourgmail@gmail.com"

## Option B: Resend (https://resend.com)
RESEND_API_KEY="your-resend-api-key"

# Admin recipient email for notifications (falls back to VITE_ADMIN_EMAIL if unset)
ADMIN_EMAIL="club-admin@yourdomain.com"

# Server-only envs for API routes (do not prefix with VITE_)
# Used to generate signed upload URLs and perform secure operations.
SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"
